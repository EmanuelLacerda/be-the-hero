{
  "name": "@be-the-hero/monorepo",
  "version": "1.0.0",
  "author": "Alley M. Carvalho <alleycarvalho@gmail.com>",
  "description": "A monorepo structure.",
  "keywords": [
    "monorepo"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean && rm -rf ./node_modules && rm yarn.lock",
    "dev:all": "lerna run start",
    "dev:backend": "lerna run --scope @be-the-hero/backend start"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --verbose",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "3.1.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
